#!/usr/bin/env bash

#####################################################
# Creates project
#
# @param string $1 force-local "true" or "false"
#####################################################
function createProject() {
	TMPDIR=$(mktemp -d)
	pushd $TMPDIR > /dev/null
		writeComposerJSON $1
	popd > /dev/null
	echo $TMPDIR
}

#####################################################
# Creates project
#
# @param string $1 project path
#####################################################
function assertInstallProject() {
	pushd $1 > /dev/null
		composer install --no-interaction -q
		local out=$?
		assertEqual "$out" "0"
	popd > /dev/null
}

