
function testForce() {
	TEST_PATH=$(createProject "true")
	pushd $TEST_PATH > /dev/null
		composer install --no-interaction -v --no-dev --no-suggest --no-scripts
		assertEqual "$?" "0"
	popd > /dev/null
	YARN_PATH=$(addFileExtensionIfNeeded "$TEST_PATH/vendor/bin/yarn")
	NPM_PATH=$(addFileExtensionIfNeeded "$TEST_PATH/vendor/bin/npm")
	NODE_PATH=$(addFileExtensionIfNeeded "$TEST_PATH/vendor/bin/node")
	assertEqual [ -f "$YARN_PATH" ] 0
	assertEqual [ -f "$NPM_PATH" ] 0
	assertEqual [ -f "$NODE_PATH" ] 0
}

function testAuto() {
	NPM_INSTALLED=$(isGlobalInstalled npm)
	TEST_PATH=$(createProject "false")
	pushd $TEST_PATH > /dev/null
		composer install --no-interaction -v --no-dev --no-suggest --no-scripts
		assertEqual "$?" "0"
	popd > /dev/null
	YARN_PATH=$(addFileExtensionIfNeeded "$TEST_PATH/vendor/bin/yarn")
	NPM_PATH=$(addFileExtensionIfNeeded "$TEST_PATH/vendor/bin/npm")
	NODE_PATH=$(addFileExtensionIfNeeded "$TEST_PATH/vendor/bin/node")
	if [ "$NPM_INSTALLED" == "0" ]; then
		assertEqual [ -f "$YARN_PATH" ] 0
		assertEqual [ -f "$NPM_PATH" ] 0
		assertEqual [ -f "$NODE_PATH" ] 0
	else
		assertNotEqual [ -f "$YARN_PATH" ] 0
		assertNotEqual [ -f "$NPM_PATH" ] 0
		assertNotEqual [ -f "$NODE_PATH" ] 0
		YARN_INSTALLED=$(isGlobalInstalled yarn)
		assertEqual "$YARN_INSTALLED" "1"
	fi;
}