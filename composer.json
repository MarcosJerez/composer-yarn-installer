{
	"name": "imponeer/composer-yarn-installer",
	"description": "Composer plugin to install yarn in vendor/",
	"type": "composer-plugin",
	"require": {
		"php": ">=7.0",
		"ext-Phar": ">=2.0",
		"ext-json": ">=1.6",
		"composer-plugin-api": "^1.1",
		"matthiasmullie/path-converter": "^1.1"
	},
	"license": "MIT",
	"authors": [
		{
			"name": "Raimondas Rimkeviƒçius",
			"email": "github@mekdrop.name"
		}
	],
	"autoload": {
		"psr-4": {
			"Imponeer\\ComposerYarnInstaller\\": "src/"
		}
	},
	"extra": {
		"class": [
			"Imponeer\\ComposerYarnInstaller\\Plugin"
		]
	},
	"require-dev": {
		"composer/composer": "*"
	},
	"config": {
		"sort-packages": true,
		"optimize-autoloader": true
	},
	"archive": {
		"exclude": [
			".travis.yml",
			".editorconfig",
			".gitattributes",
			".gitignore"
		]
	}
}
